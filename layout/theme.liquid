<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>{{ page_title }}</title>
  {{ 'styles.css' | asset_url | stylesheet_tag }}
  {{ content_for_header }}
</head>
<body class="template-{{ template.name }}">
  <header class="site-header" role="banner">
    <div class="site-header__inner">
      <nav class="site-nav" aria-label="Primary">
        <a href="{{ routes.root_url }}">Home</a>
        <a href="/pages/about">About</a>
        <a href="/collections">Collections</a>
        <a href="{{ routes.cart_url }}" class="site-cart">
          Cart
          {% if cart.item_count > 0 %}
            <span class="site-cart__count">{{ cart.item_count }}</span>
          {% endif %}
        </a>
      </nav>
    </div>
    <div class="site-header__mobile" aria-label="Mobile header">
      <div class="site-header__mobile-left">
        <button class="site-header__icon" type="button" aria-label="Open menu">
          <svg viewBox="0 0 24 24" aria-hidden="true">
            <path d="M3 6h18M3 12h18M3 18h18" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round"/>
          </svg>
        </button>
        <a class="site-header__icon" href="/search" aria-label="Search">
          <svg viewBox="0 0 24 24" aria-hidden="true">
            <circle cx="11" cy="11" r="6.5" fill="none" stroke="currentColor" stroke-width="1.6"/>
            <path d="M16.2 16.2L21 21" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round"/>
          </svg>
        </a>
      </div>
      <a class="site-header__brand" href="{{ routes.root_url }}">CAELINA</a>
      <div class="site-header__mobile-right">
        <a class="site-header__icon" href="/account" aria-label="Account">
          <svg viewBox="0 0 24 24" aria-hidden="true">
            <circle cx="12" cy="8" r="4" fill="none" stroke="currentColor" stroke-width="1.6"/>
            <path d="M4 20c1.8-4 6-6 8-6s6.2 2 8 6" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round"/>
          </svg>
        </a>
        <a class="site-header__icon site-header__cart" href="{{ routes.cart_url }}" aria-label="Cart">
          <svg viewBox="0 0 24 24" aria-hidden="true">
            <path d="M6 7h12l-1.4 12H7.4L6 7z" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linejoin="round"/>
            <path d="M8 7l.6-3h6.8l.6 3" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round"/>
          </svg>
          {% if cart.item_count > 0 %}
            <span class="site-cart__count">{{ cart.item_count }}</span>
          {% endif %}
        </a>
      </div>
    </div>
  </header>
  <a class="logo" id="brandLogo" href="{{ routes.root_url }}" aria-label="CAELINA home">CΛELINΛ</a>
  {{ content_for_layout }}
  {% if template.name == 'index' %}
    <script src="{{ 'app.js' | asset_url }}" defer></script>
  {% endif %}
</body>
</html>
